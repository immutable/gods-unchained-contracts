{
    "name": "@imtbl/monorepo",
    "license": "MIT",
    "version": "1.0.0",
    "description": "Monorepo of all Immutable contracts and supporting packages",
    "scripts": {
        "postinstall": "yarn lerna bootstrap",
        "delete:all": "yarn delete:build && yarn delete:node_modules && yarn delete:dist",
        "delete:build": "find . -name \"build\" -exec rm -rf '{}' +",
        "delete:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
        "delete:dist": "find . -name \"dist\" -exec rm -rf '{}' +",
        "delete:yarn.lock": "find . -name \"yarn.lock\" -exec rm -rf '{}' +",
        "chain": "ganache-cli --networkId 50 --accounts 20 -l 19000000 -e 10000000000 -m 'concert load couple harbor equip island argue ramp clarify fence smart topic'",
        "lint": "yarn lerna run lint",
        "build:gods-unchained": "yarn --cwd contracts/gods-unchained build",
        "build:legacy-gods-unchained": "yarn --cwd contracts/legacy-gods-unchained build",
        "build:immutable-wallet": "yarn --cwd contracts/immutable-wallet build",
        "build:all": "yarn build:gods-unchained && yarn build:legacy-gods-unchained && yarn build:immutable-wallet",
        "deploy:gods-unchained": "yarn --cwd contracts/gods-unchained deploy --all",
        "deploy:immutable-wallet": "yarn --cwd contracts/immutable-wallet deploy --all",
        "deploy:legacy-gods-unchained": "yarn --cwd contracts/legacy-gods-unchained deploy --all",
        "deploy:all": "yarn deploy:gods-unchained && yarn deploy:immutable-wallet && yarn deploy:legacy-gods-unchained",
        "setup": "yarn build:all && lerna bootstrap",
        "build": "tsc & yarn lerna run build",
        "test": "yarn lerna run test",
        "generate-cards": "yarn --cwd packages/order-generator create",
        "ci:clear-addresses": "node scripts/clearDevAddresses"
    },
    "dependencies": {
        "concurrently": "^4.1.2",
        "dotenv": "^8.2.0",
        "fs": "^0.0.1-security",
        "lerna": "^3.4.3",
        "typescript": "3.7.5"
    },
    "devDependencies": {
        "@types/jest": "^25.1.1",
        "@types/node": "11.15.0",
        "ganache-cli": "^6.7.0"
    },
    "engines": {
        "node": "^11.15.0"
    }
}
